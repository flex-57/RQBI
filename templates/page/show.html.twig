{% extends 'base.html.twig' %}

{% block title %}
	{{ page.title }}
	|
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="prose max-w-none">
		{{ render_blocks(page.blocks) }}
	</div>

	{# Boutons d'action rapide (toujours visibles pour l'admin) #}
	{% if is_granted('ROLE_ADMIN') %}
		<div class="mt-8 p-4 bg-gray-100 rounded">
			<a href="{{ path('app_block_add', {id: page.id}) }}" class="btn btn-primary">
				+ Nouveau bloc
			</a>
		</div>
	{% endif %}
{% endblock %}
